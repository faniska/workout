<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="workout_plan_form" model="ir.ui.view">
            <field name="name">workout.plan.form</field>
            <field name="model">workout.plan</field>
            <field name="arch" type="xml">
                <form string="Workout Plan">
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="days">
                            <tree>
                                <field name="name"/>
                                <field name="day"/>
                            </tree>
                            <form>
                                <group>
                                    <field name="day"/>
                                </group>
                                <notebook>
                                    <group string="Exercises">
                                        <field name="exercise_ids" nolabel="True">
                                            <tree editable="bottom">
                                                <field name="sequence" widget="handle"/>
                                                <field name="exercise_id"/>
                                                <field name="sets_number_min"/>
                                                <field name="sets_number_max"/>
                                                <field name="reps_number_min"/>
                                                <field name="reps_number_max"/>
                                            </tree>
                                        </field>
                                    </group>
                                </notebook>
                            </form>
                        </field>
                    </group>
                </form>
            </field>
        </record>

        <record id="workout_plan_tree" model="ir.ui.view">
            <field name="name">workout.plan.tree</field>
            <field name="model">workout.plan</field>
            <field name="arch" type="xml">
                <tree string="Workout Plans">
                    <field name="name"/>
                    <field name="days"/>
                </tree>
            </field>
        </record>

        <record id="action_workout_plans" model="ir.actions.act_window">
            <field name="name">Plans</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">workout.plan</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Plans"
                  id="menu_workout_plans"
                  action="action_workout_plans"
                  parent="menu_workout_settings"
                  sequence="10" groups="workout.workout_manager"/>

    </data>
</odoo>